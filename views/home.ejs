<div class="container">
    <h1>환영합니다, <%= user.nickname %>님!</h1>
    <div class="info">
        <p><span class="label">아이디:</span> <%= user.username %></p>
        <% if (user.email) { %>
            <p><span class="label">이메일:</span> <%= user.email %></p>
        <% } %>
        <% if (user.googleId) { %>
            <p><span class="label">구글 계정으로 로그인됨</span></p>
        <% } %>
        <% if (user.naverId) { %>
            <p><span class="label">네이버 계정으로 로그인됨</span></p>
        <% } %>
        <p><span class="label">가입일:</span> <%= user.createdAt.toLocaleDateString() %></p>
        <div class="logout-container">
            <button onclick="logout()" class="logout-btn">로그아웃</button>
        </div>
    </div>
</div>
<script>
    function logout() {
        fetch('/auth/logout', {
            method: 'POST',
            credentials: 'include'
        })
        .then(response => {
            if (response.ok) {
                window.location.href = '/login';
            }
        })
        .catch(error => {
            console.error('로그아웃 중 오류 발생:', error);
        });
    }
</script>
<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        padding: 40px;
        background-color: #f9f9f9;
    }
    .container {
        max-width: 500px;
        margin: auto;
        background: white;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0,0,0,0.1);
    }
    h1 {
        text-align: center;
        color: #333;
    }
    .info {
        margin-top: 20px;
    }
    .info p {
        font-size: 1.1rem;
        margin: 10px 0;
    }
    .label {
        font-weight: bold;
        color: #555;
    }
    .logout-container {
        margin-top: 30px;
        text-align: center;
    }
    .logout-btn {
        background-color: #dc3545;
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
        cursor: pointer;
        font-size: 1rem;
        transition: background-color 0.3s;
    }
    .logout-btn:hover {
        background-color: #c82333;
    }
</style>